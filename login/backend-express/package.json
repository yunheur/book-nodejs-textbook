{
  "name": "backend-express",
  "version": "1.0.0",
  "description": "express backend server",
  "main": "app.js",
  "scripts": {
    "build": "tsc",
    "start": "cd dist && cross-env NODE_ENV=production pm2 start app.js -i 0",
    "stop": "pm2 kill",
    "restart": "npm run stop & npm start",
    "dev": "cd src && nodemon --exec ts-node app.ts",
    "dev:debug": "cd src && node --inspect -r ts-node/register app.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yunheur/study-nodejs.git"
  },
  "keywords": [
    "express",
    "mysql",
    "nodejs"
  ],
  "author": "yunhuer",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yunheur/study-nodejs/issues"
  },
  "homepage": "https://github.com/yunheur/study-nodejs#readme",
  "dependencies": {
    "dotenv": "^8.0.0",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/express": "^4.16.1",
    "@types/node": "^12.0.4",
    "cross-env": "^5.2.0",
    "nodemon": "^1.19.1",
    "pm2": "^3.5.1",
    "prettier": "^1.17.1",
    "ts-node": "^8.2.0",
    "tslint": "^5.17.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.1"
  }
}
